---
import { getImage } from "astro:assets";
import tubeMusicPng from "@/assets/11Tube_Music.png";
import botPng from "@/assets/bot.png";
import cloverPng from "@/assets/clover.png";
import HomeContent from "@/components/HomeContent";
import Layout from "@/layouts/Layout.astro";

const _cloverOptimized = await getImage({
	src: cloverPng,
	format: "webp",
	width: 400,
	height: 400,
});
const _botOptimized = await getImage({
	src: botPng,
	format: "webp",
	width: 400,
});
const _tubeMusicOptimized = await getImage({
	src: tubeMusicPng,
	format: "webp",
	width: 400,
});
---

<Layout>
  <HomeContent
    client:load 
    images={{
      clover: _cloverOptimized,
      bot: _botOptimized,
      tubeMusic: _tubeMusicOptimized
    }} 
  />
</Layout>
